{
  "ApiEndpoints": {
    "BaseUrl": "https://localhost:7240/api",
    "JVs": {
      "GetAll": "api/jv",
      "GetById": "api/jv/{id}",
      "Create": "api/jv",
      "Update": "api/jv/{id}",
      "Delete": "api/jv/{id}",
      "GenerateNumber": "api/jv/generate-number"
    },
    "Accounts": {
      "GetAll": "Account",
      "GetById": "Account/{id}",
      "Create": "Account",
      "Update": "Account/{id}",
      "Delete": "Account/{id}"
    },
    "SubAccounts": {
      "GetAll": "api/subaccount",
      "GetById": "api/subaccount/{id}",
      "Create": "api/subaccount",
      "Update": "api/subaccount/{id}",
      "Delete": "api/subaccount/{id}"
    },
    "JVTypes": {
      "GetAll": "api/jvtype",
      "GetById": "api/jvtype/{id}",
      "Create": "api/jvtype",
      "Update": "api/jvtype/{id}",
      "Delete": "api/jvtype/{id}"
    },
    "Branches": {
      "GetAll": "Branch",
      "GetById": "Branch/{id}",
      "Create": "Branch",
      "Update": "Branch/{id}",
      "Delete": "Branch/{id}"
    },
    "JVDetails": {
      "GetAll": "api/jvdetail",
      "GetById": "api/jvdetail/{id}",
      "GetByJVId": "api/jvdetail/jv/{jvId}",
      "Create": "api/jvdetail",
      "Update": "api/jvdetail/{id}",
      "Delete": "api/jvdetail/{id}"
    }
  },
  "DataFormats": {
    "DateFormat": "yyyy-MM-ddTHH:mm:ss",
    "DisplayDateFormat": "dd/MM/yyyy",
    "CurrencyFormat": "C",
    "DecimalPlaces": 2
  },
  "Validation": {
    "MaxJVNumberLength": 50,
    "MaxNotesLength": 1000,
    "MaxReceiptNumberLength": 50,
    "MinDebitCreditDifference": 0.01
  }
}
