{
  "ApiBaseUrl": "https://localhost:7240/api",
  "ApiEndpoints": {
    "Accounts": "api/account",
    "Branches": "api/branch",
    "Cities": "api/city",
    "SubAccounts": "api/subaccount",
    "SubAccountClients": "api/subaccountsclient",
    "SubAccountTypes": "api/subaccountstype",
    "SubAccountsDetail": "api/subaccounts_detail",
    "SubAccountsLevel": "api/subaccounts_level",
    "JVs": "api/jv",
    "JVDetails": "api/jvdetail",
    "JVTypes": "api/jvtype"
  },
  "AppSettings": {
    "DefaultLanguage": "Arabic",
    "PageSize": 20,
    "EnableCaching": true,
    "CacheTimeout": 300,
    "EnableRealTimeUpdates": false,
    "DateFormat": "dd/MM/yyyy",
    "CurrencyFormat": "C",
    "DecimalPlaces": 2
  },
  "Features": {
    "EnableExport": true,
    "EnablePrint": true,
    "EnableAuditTrail": false,
    "EnableNotifications": true,
    "EnableAutoSave": true
  }
}
